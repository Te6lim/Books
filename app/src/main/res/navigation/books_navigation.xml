<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/books_navigation"
    app:startDestination="@id/shelfFragment">
    <fragment
        android:id="@+id/shelfFragment"
        android:name="com.andyprojects.books.shelf.ShelfFragment"
        android:label="fragment_shelf"
        tools:layout="@layout/fragment_shelf" >
        <action
            android:id="@+id/action_shelfFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment"
            app:popUpTo="@id/shelfFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.andyprojects.books.bookDetail.BookDetailFragment"
        android:label="fragment_detail_book"
        tools:layout="@layout/fragment_detail_book" >
        <argument
            android:name="selectedBook"
            app:argType="com.andyprojects.books.network.Book" />
    </fragment>
</navigation>